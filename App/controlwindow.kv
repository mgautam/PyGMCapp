<StsLabel@Button>:
    #size_hint:None,None
    #size:root.width/5,root.height/15
    text_size:self.size
    halign:'center'
    valign:'middle'
<controlWindow@FloatLayout>:
    hostlbl:host_lbl
    ctrllbl:ctrl_lbl
    controlarea: ctrl_area
    cmdlbl:cmd_lbl
    statuslbl:status_lbl
    fwdbtn:_fwdBtn
    bwdbtn:_bwdBtn
    rpa:_RPA
    tpa:_TPA
    tva:_TVA
    tda:_TDA
    moa:_MOA
    Label:
        id: host_lbl
        size_hint:None,None
        size:root.width/6,root.height/15
        pos:root.width/2-self.width-15,root.height-self.height-15
        text_size:self.size
        halign: 'right'
    Label:
        id: ctrl_lbl
        size_hint:None,None
        size:root.width/6,root.height/15
        pos:root.width/2+15,root.height-self.height-15
        text_size:self.size
        halign: 'left'
    RelativeLayout:
        id: ctrl_area
        size_hint:None,None
        size:root.width,root.height*12/15-30
        pos:0,root.height*2/15 
        GridLayout:
            cols:2
            rows:5
            size_hint:None,None
            size:root.width/3,root.height*12/15-30
            StsLabel:
                text:"TPA"
            StsLabel:
                id:_TPA
            StsLabel:
                text:"RPA"
            StsLabel:
                id:_RPA
            StsLabel:
                text:"MOA"
            StsLabel:
                id:_MOA
            StsLabel:
                text:"TVA"
            StsLabel:
                id:_TVA
            StsLabel:
                text:"TDA"
            StsLabel:
                id:_TDA
            #pos_hint:0,0
        GridLayout:
            rows:2
            size_hint:None,None
            size:root.width/3,root.height*2/5
            pos:root.width*1/2,root.height/2-self.height/2
            Button:
                id:_fwdBtn
                text:'Forward'
                on_press:root.moveforward(*args)
            Button:
                id:_bwdBtn
                text:'Backward'
                on_press:root.movereverse(*args)
    Label:
        id: cmd_lbl
        size_hint:None,None
        size:root.width,root.height/15
        pos:0,root.height/15
        halign: 'left'
        text_size: self.size
        text:"Last Command: " 
    Label:
        id: status_lbl
        size_hint:None,None
        size:root.width,root.height/15
        pos:0,0
        halign: 'left'
        text_size: self.size
        text:"Status: "
