<hostBtn@Button>:
    size_hint:None,None
    size:300,30

<beaconWindow@FloatLayout>:
    radarbtn:ping_btn
    passwdInput:_passwdInput
    hostsContainer: ping_bl

    Button:
        id: ping_btn
        size_hint:None,None
        size:300,30
        pos:root.width/2-self.width-15,root.height-self.height-15
        text:"Find Hosts"
    TextInput:
        id:_passwdInput
        size_hint:None,None
        size:300,30
        pos:root.width/2+15,root.height-self.height-15
    StackLayout:
        size_hint:None,None
        size:root.width,root.height-60
        orientation: "tb-lr"
        id: ping_bl
        spacing: 15
